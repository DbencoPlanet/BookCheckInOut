@page
@model BookCheckInOut.Web.Pages.Books.AddModel
@{
}

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
}

@section Styles{
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
}

<div class="container">
    <div class="header clearfix detailHeading">
        <h2 class="text-muted">Add Book Item</h2>
    </div>

    <div class="jumbotron">
        <div class="row">
           
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Book.Title" placeholder="Book Title*" required />
                        <span asp-validation-for="Book.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Book.ISBN" placeholder="Book ISBN*" required />
                        <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" asp-for="Book.Year" placeholder="Published Year*" required />
                        <span asp-validation-for="Book.Year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" asp-for="Book.Cost" placeholder="Price*" required />
                        <span asp-validation-for="Book.Cost" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="file" name="file" id="file">
                    </div>


                    <div>
                        <button type="submit" class="btn btn-success btn-lg">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>